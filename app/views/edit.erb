<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><input name="name" value="<%= @recipe.name %>"></p>
  <p><input name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p><input name="cook_time" value="<%= @recipe.cook_time %>"></p>


  <input type="submit" value="submit"/>
  </form>
